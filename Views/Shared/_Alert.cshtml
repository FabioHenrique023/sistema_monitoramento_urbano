@* Views/Shared/_Alert.cshtml *@

@if (TempData["Success"] != null)
{
    <div class="mb-4 flex items-center justify-between rounded-lg border border-green-200 bg-green-50 px-4 py-3 text-green-800 shadow-sm">
        <div class="flex items-center gap-2">
            <svg class="h-5 w-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2l4-4m6 2a9 9 0 11-18 0a9 9 0 0118 0z"/>
            </svg>
            <span>@TempData["Success"]</span>
        </div>
        <button onclick="this.parentElement.remove()" class="ml-4 text-green-600 hover:text-green-900">
            &times;
        </button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="mb-4 flex items-center justify-between rounded-lg border border-red-200 bg-red-50 px-4 py-3 text-red-800 shadow-sm">
        <div class="flex items-center gap-2">
            <svg class="h-5 w-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M12 20a8 8 0 100-16a8 8 0 000 16z"/>
            </svg>
            <span>@TempData["Error"]</span>
        </div>
        <button onclick="this.parentElement.remove()" class="ml-4 text-red-600 hover:text-red-900">
            &times;
        </button>
    </div>
}