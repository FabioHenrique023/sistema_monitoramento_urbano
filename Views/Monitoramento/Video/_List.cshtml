@using sistema_monitoramento_urbano.Models.Repositorio.Entidades
@{
    var video = ViewBag.Video as IEnumerable<Video> ?? Enumerable.Empty<Video>();
    var cameras = ViewBag.Camera as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>();
    var cameraOptions = ViewBag.CameraOptions as IEnumerable<SelectListItem> ?? cameras;
    var selectedCamera = ViewBag.VideoCameraFiltro as int?;
    var busca = ViewBag.VideoBusca as string ?? string.Empty;
}

<form method="get" asp-controller="Monitoramento" asp-action="Index" class="mb-4 grid gap-3 md:grid-cols-4">
  <input type="hidden" name="tab" value="video" />
  <div class="md:col-span-2">
    <label class="block text-xs font-semibold text-gray-600 uppercase tracking-wide mb-1">Buscar por nome ou caminho</label>
    <input name="videoBusca"
           value="@busca"
           class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500"
           placeholder="Ex.: flagrante.mp4" />
  </div>
  <div>
    <label class="block text-xs font-semibold text-gray-600 uppercase tracking-wide mb-1">Filtrar por câmera</label>
    <select name="videoCameraId"
            class="w-full rounded-lg border border-gray-300 px-3 py-2 bg-white focus:outline-none focus:ring-2 focus:ring-indigo-500">
      <option value="">Todas</option>
      @foreach (var item in cameraOptions)
      {
        var isSelected = selectedCamera.HasValue && selectedCamera.Value.ToString() == item.Value;
        <option value="@item.Value" selected="@(isSelected ? "selected" : null)">@item.Text</option>
      }
    </select>
  </div>
  <div class="flex items-end gap-2">
    <button type="submit"
            class="px-4 py-2 rounded-lg bg-emerald-600 text-white text-sm font-semibold shadow hover:bg-emerald-700 transition">
      Filtrar
    </button>
    <a asp-controller="Monitoramento"
       asp-action="Index"
       asp-route-tab="video"
       class="px-4 py-2 rounded-lg bg-gray-100 text-gray-700 text-sm font-semibold hover:bg-gray-200 transition">
      Limpar
    </a>
  </div>
</form>

<div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden">
  <table class="min-w-full text-sm">
    <thead class="bg-gray-50 text-gray-700 font-semibold">
      <tr>
        <th class="px-4 py-3 text-left">ID</th>
        <th class="px-4 py-3 text-left">Nome</th>
        <th class="px-4 py-3 text-left">Caminho</th>
        <th class="px-4 py-3 text-left">Data</th>
        <th class="px-4 py-3 text-left">Início</th>
        <th class="px-4 py-3 text-left">Câmera</th>
        <th class="px-4 py-3 text-right">Ações</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-100">
    @if (!video.Any())
    {
      <tr>
        <td colspan="8" class="px-4 py-6 text-center text-gray-500">Nenhum vídeo cadastrado.</td>
      </tr>
    }
    else
    {
      foreach (var v in video)
      {
        // Buscar descrição da câmera
        var cameraNome = cameras.FirstOrDefault(c => c.Value == v.camera_id.ToString())?.Text ?? "(Câmera removida)";

        <tr class="hover:bg-gray-50">
          <td class="px-4 py-3 font-medium text-gray-900">@v.Id</td>
          <td class="px-4 py-3">@v.nome_arquivo</td>
          <td class="px-4 py-3">@v.caminho_arquivo</td>
          <td class="px-4 py-3">@v.data_upload</td>
          <td class="px-4 py-3">@v.horario_inicio</td>
          <td class="px-4 py-3">@cameraNome</td>
          <td class="px-4 py-3 text-right">
            <form asp-controller="Video" asp-action="Excluir" method="post" class="inline">
              <input type="hidden" name="id" value="@v.Id" />
              <button type="submit" class="text-red-600 hover:text-red-800 text-sm font-medium">
                <i class="fas fa-trash-alt mr-1"></i> Excluir
              </button>
            </form>
          </td>
        </tr>
      }
    }
    </tbody>
  </table>
</div>