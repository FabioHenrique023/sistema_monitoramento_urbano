@using Models.Repositorio.Entidades
@{
    var video = ViewBag.Video as IEnumerable<Video> ?? Enumerable.Empty<Video>();
}
<div class="bg-white rounded-xl shadow">
  <table class="min-w-full text-sm">
    <thead class="bg-gray-50 text-gray-600">
      <tr>
        <th class="px-4 py-2 text-left">ID</th>
        <th class="px-4 py-2 text-left">Nome</th>
        <th class="px-4 py-2 text-left">Caminho</th>
        <th class="px-4 py-2 text-left">Data</th>
        <th class="px-4 py-2 text-left">Início</th>
        <th class="px-4 py-2 text-left">Usuário</th>
        <th class="px-4 py-2 text-left">Câmera</th>
        <th class="px-4 py-2"></th>
      </tr>
    </thead>
    <tbody>
    @if (!video.Any())
    {
      <tr><td colspan="8" class="px-4 py-6 text-center text-gray-500">Nenhum vídeo cadastrado.</td></tr>
    }
    else
    {
      foreach (var v in video)
      {
        <tr class="border-t">
          <td class="px-4 py-2">@v.Id</td>
          <td class="px-4 py-2">@v.nome_arquivo</td>
          <td class="px-4 py-2 truncate">@v.caminho_arquivo</td>
          <td class="px-4 py-2">@v.data_upload</td>
          <td class="px-4 py-2">@v.horario_inicio</td>
          <td class="px-4 py-2">@v.id_usuario</td>
          <td class="px-4 py-2">@v.camera_id</td>
          <td class="px-4 py-2 text-right">
            <form asp-controller="Video" asp-action="Delete" method="post">
              <input type="hidden" name="id" value="@v.Id" />
              <button class="text-red-600 hover:underline">Excluir</button>
            </form>
          </td>
        </tr>
      }
    }
    </tbody>
  </table>
</div>