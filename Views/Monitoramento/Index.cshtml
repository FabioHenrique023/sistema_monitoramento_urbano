@{
    ViewData["Title"] = "Cadastro de Câmeras & Vídeos";
}

<div class="mx-auto max-w-6xl p-6">
  <h1 class="text-2xl font-semibold mb-1">Cadastro de Câmeras & Vídeos</h1>
  <p class="text-sm text-gray-500 mb-6">Gerencie pontos de monitoramento e associe vídeos às câmeras.</p>

  <!-- TABS -->
  <div class="mb-4 border-b border-gray-200">
    <nav class="-mb-px flex gap-2" role="tablist">
      <button class="tab-btn active px-3 py-2 text-sm font-medium text-purple-700 border-b-2 border-purple-600" data-target="#tab-camera">Câmeras</button>
      <button class="tab-btn px-3 py-2 text-sm text-gray-500 hover:text-gray-700 border-b-2 border-transparent hover:border-gray-300" data-target="#tab-video">Vídeos</button>
    </nav>
  </div>

  <!-- CONTEÚDO TABS -->
  <section id="tab-camera" class="tab-panel block">
    @await Html.PartialAsync("~/Views/Monitoramento/Camera/_Tab.cshtml")
  </section>

  <section id="tab-video" class="tab-panel hidden">
    @await Html.PartialAsync("~/Views/Monitoramento/Video/_Tab.cshtml")
  </section>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
  <script>
    document.querySelectorAll('.tab-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        document.querySelectorAll('.tab-btn').forEach(b => {
          b.classList.remove('text-purple-700','border-purple-600','active');
          b.classList.add('text-gray-500','border-transparent');
        });
        btn.classList.add('text-purple-700','border-purple-600','active');
        btn.classList.remove('text-gray-500','border-transparent');

        document.querySelectorAll('.tab-panel').forEach(p => p.classList.add('hidden'));
        document.querySelector(btn.dataset.target).classList.remove('hidden');
      });
    });
  </script>
}
